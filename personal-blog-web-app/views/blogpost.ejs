    <link rel="stylesheet" href="/pubpost.css">
</head>

<body>
    <div class="container-fluid d-flex align-items-center flex-column ">
        <div class="container h-100 w-50 flex-grow-1 p-4 ">
            <form method="post" class="d-flex flex-column gap-3" action="http://localhost:6800/api/v1/blog/post/publish">
                <div class="heading  p-2">
                    <h2>New Blog</h2>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="first blog" name="blogTitle">
                    <label for="floatingInput">Article title</label>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                        style="height: 200px" name="blogData"></textarea>
                    <label for="floatingTextarea2">Comments</label>
                </div>
                <div class="row m-1">
                    <button type="submit" href="" class="btn btn-primary">Publish</button>
                </div>
            </form>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
